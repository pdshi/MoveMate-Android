<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.stevennt.movemate.ui.utils.CustomButton
        android:id="@+id/btn_camera_next"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginTop="53dp"
        android:layout_marginStart="250dp"
        android:fontFamily="@font/helvetica_neue_bold"
        android:hint="@string/next"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_confirmpassword" />

    <ImageView
        android:id="@+id/back_camera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="58dp"
        android:clickable="true"
        android:contentDescription="@string/arrow_back"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back"
        app:tint="@color/offWhite" />

    <include layout="@layout/bottom_sheet_layout"/>

    <TextView
        android:id="@+id/tv_workout"
        android:layout_width="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginStart="70dp"
        android:textSize="24sp"
        android:fontFamily="@font/helvetica_neue_bold"
        android:textColor="@color/offWhite"
        android:layout_height="wrap_content"
        android:text="Push Up"/>

    <TextView
        android:id="@+id/tv_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginStart="180dp"
        android:textSize="24sp"
        android:alpha="1"
        android:fontFamily="@font/helvetica_neue_bold"
        android:textColor="@color/offWhite"
        android:text="0" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>