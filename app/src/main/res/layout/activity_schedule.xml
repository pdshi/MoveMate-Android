<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.ScheduleActivity"
    android:background="@color/offWhite">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/helvetica_neue_bold"
        android:text="@string/schedule"
        android:textColor="@color/gray"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/bottom_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.884"
        app:srcCompat="@drawable/bottom_bar" />

    <ImageView
        android:id="@+id/iv_home_atdaily"
        android:layout_width="30dp"
        android:layout_height="25.5dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintStart_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="@+id/imageView15"
        app:layout_constraintVertical_bias="0.466"
        app:srcCompat="@drawable/home_vector"
        android:contentDescription="@string/home_vector"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/iv_profile_atdaily"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintEnd_toEndOf="@+id/imageView15"
        app:layout_constraintTop_toTopOf="@+id/imageView15"
        app:layout_constraintVertical_bias="0.451"
        app:srcCompat="@drawable/acc_vector" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="47dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintEnd_toStartOf="@+id/iv_profile_atdaily"
        app:layout_constraintStart_toEndOf="@+id/iv_home_atdaily"
        app:layout_constraintTop_toTopOf="@+id/imageView15"
        app:srcCompat="@drawable/daily_text_vector" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/imageView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        app:layout_constraintVertical_bias="0.144">

        <ImageView
            android:id="@+id/rect_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rect_orange_stroke" />

        <ImageView
            android:id="@+id/rect_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toEndOf="@+id/rect_orange"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rect_solid_gray" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="@string/calories_kcal"
            android:textColor="@color/orange"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/rect_orange"
            app:layout_constraintTop_toTopOf="@+id/rect_orange" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="Workouts (Min)"
            android:textColor="@color/offWhite"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/rect_gray"
            app:layout_constraintTop_toTopOf="@+id/rect_gray" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="@string/this_week"
            android:textColor="@color/orange"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/rect_orange"
            app:layout_constraintTop_toBottomOf="@+id/tv_intotal"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="@string/this_week"
            android:textColor="@color/offWhite"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/rect_gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_intotal2"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/tv_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="100"
            android:textColor="@color/orange"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/rect_orange"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/tv_calories3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_neue_bold"
            android:text="20"
            android:textColor="@color/offWhite"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/rect_gray"
            app:layout_constraintTop_toBottomOf="@+id/textView17" />

        <TextView
            android:id="@+id/tv_intotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_neue_light"
            android:text="@string/in_total"
            android:textColor="@color/orange"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_calories"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rect_orange"
            app:layout_constraintTop_toBottomOf="@+id/tv_calories" />

        <TextView
            android:id="@+id/tv_intotal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/helvetica_neue_light"
            android:text="@string/in_total"
            android:textColor="@color/offWhite"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_calories3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rect_gray"
            app:layout_constraintTop_toBottomOf="@+id/tv_calories3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/imageGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parentContainer">

        <ImageView
            android:id="@+id/iv_base"
            android:layout_width="400dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/base_muscle" />

        <ImageView
            android:id="@+id/iv_situp"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:alpha="1"
            app:srcCompat="@drawable/situp_focus_area" />

        <ImageView
            android:id="@+id/iv_pushup"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:alpha="1"
            app:srcCompat="@drawable/pushup_focus_area" />

        <ImageView
            android:id="@+id/iv_jjack"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:alpha="1"
            app:srcCompat="@drawable/jjack_focus_area" />

    </FrameLayout>

    <EditText
        android:id="@+id/editTextStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:focusable="true"
        android:hint="Start Date"
        android:inputType="date"
        android:textColorHint="@color/orange"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/editTextEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:focusable="true"
        android:hint="End Date"
        android:inputType="date"
        android:textColorHint="@color/orange"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/editTextStartDate"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:ignore="TextFields" />



</androidx.constraintlayout.widget.ConstraintLayout>